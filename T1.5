import React, { createContext, useState, useContext } from "react";

// 1. Create ThemeContext with default value
export const ThemeContext = createContext({
  theme: "light",
  toggleTheme: () => {},
});

// 2. ThemeProvider component holds theme state and toggle function
export const ThemeProvider = ({ children }) => {
  const [theme, setTheme] = useState("light");

  const toggleTheme = () => {
    setTheme((prevTheme) =>
      prevTheme === "light" ? "dark" : "light"
    );
  };

  return (
    <ThemeContext.Provider value={{ theme, toggleTheme }}>
      {/* Global wrapper to apply bg & text colors */}
      <div
        className={
          theme === "light"
            ? "bg-white text-gray-900 min-h-screen transition-colors duration-300"
            : "bg-gray-900 text-white min-h-screen transition-colors duration-300"
        }
      >
        {children}
      </div>
    </ThemeContext.Provider>
  );
};

// ThemeToggle component to switch themes (the only button)
const ThemeToggle = () => {
  const { theme, toggleTheme } = useContext(ThemeContext);

  return (
    <button
      onClick={toggleTheme}
      className="px-6 py-3 my-6 rounded border border-gray-700 dark:border-gray-300
                 bg-gray-200 dark:bg-gray-700
                 text-gray-900 dark:text-gray-100
                 hover:bg-gray-300 dark:hover:bg-gray-600
                 transition-colors duration-300 cursor-pointer"
    >
      Switch to {theme === "light" ? "Dark" : "Light"} Mode
    </button>
  );
};

// Improved Navbar component
const Navbar = () => {
  const { theme } = useContext(ThemeContext);

  return (
    <nav
      className={`flex items-center justify-between px-6 py-4 shadow-md
        ${
          theme === "light"
            ? "bg-white text-gray-900 border-b border-gray-200"
            : "bg-gray-800 text-white border-b border-gray-700"
        }`}
    >
      <div className="text-xl font-semibold">MyApp</div>
      <div className="space-x-6 text-sm">
        <a href="#home" className="hover:underline">
          Home
        </a>
        <a href="#about" className="hover:underline">
          About
        </a>
        <a href="#contact" className="hover:underline">
          Contact
        </a>
      </div>
    </nav>
  );
};

// Improved Footer component
const Footer = () => {
  const { theme } = useContext(ThemeContext);

  return (
    <footer
      className={`mt-12 py-6 px-6
        ${
          theme === "light"
            ? "bg-gray-100 text-gray-700 border-t border-gray-300"
            : "bg-gray-900 text-gray-300 border-t border-gray-700"
        }`}
    >
      <div className="max-w-6xl mx-auto text-center text-sm select-none">
        &copy; {new Date().getFullYear()} MyApp. All rights reserved.
      </div>
    </footer>
  );
};

// Main App component
function App() {
  return (
    <ThemeProvider>
      <Navbar />
      <main className="flex flex-col items-center px-6">
        <ThemeToggle />
      </main>
      <Footer />
    </ThemeProvider>
  );
}

export default App;
